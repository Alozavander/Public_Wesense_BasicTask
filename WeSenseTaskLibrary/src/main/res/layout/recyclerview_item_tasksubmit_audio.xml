<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="42dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/taskSubmit_audio_rvitem_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/dot"/>

    <TextView
        android:id="@+id/taskSubmit_audio_name_rvitem"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@id/taskSubmit_audio_rvitem_icon"
        app:layout_constraintRight_toLeftOf="@id/taskSubmit_audio_rvitem_delete"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/taskSubmit_audio_rvitem_icon"
        app:layout_constraintBottom_toBottomOf="@id/taskSubmit_audio_rvitem_icon"
        android:layout_marginLeft="10dp"
        android:text="设置XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/taskSubmit_audio_rvitem_delete"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/taskSubmit_audio_rvitem_icon"
        app:layout_constraintTop_toTopOf="@id/taskSubmit_audio_rvitem_icon"
        android:src="@drawable/delete_navigationcolor"/>

</androidx.constraintlayout.widget.ConstraintLayout>